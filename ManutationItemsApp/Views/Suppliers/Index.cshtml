@model IEnumerable<ManutationItemsApp.Domain.Entities.Supplier>;
@using ManutationItemsApp.Domain.Entities;


@{
    ViewData["Title"] = "Index";
}

<a type="button" class="btn btn-primary" data-toggle="modal" data-target="#createNewSupplier">Create New+</a>
<i class="fa fa-file-excel fa-lg"></i>
<div id="suppliersViewDiv">
    @{ await Html.RenderPartialAsync("GetAll", Model);}
</div>
<div>
    <a type="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@{ await Html.RenderPartialAsync("Create", new Supplier()); }
<div id="editForm"></div>

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Fornitori</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Crea Nuovo Fornitore</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
