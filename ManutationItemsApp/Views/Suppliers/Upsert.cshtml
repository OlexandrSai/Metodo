@model ManutationItemsApp.Domain.Entities.Supplier
@{
        Layout = "~/Views/Shared/_Layout.cshtml";
        var title = "Crea Fornitore";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            //edit
            title = "Modifica Fornitore";
        }


        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nationality"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nationality" class="form-control" />
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CommercialRefferent"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CommercialRefferent" class="form-control" />
                    <span asp-validation-for="CommercialRefferent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneCom"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneCom" class="form-control" />
                    <span asp-validation-for="PhoneCom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmailCom"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmailCom" class="form-control" />
                    <span asp-validation-for="EmailCom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TechnicalRefferent"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TechnicalRefferent" class="form-control" />
                    <span asp-validation-for="TechnicalRefferent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneTechn"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneTechn" class="form-control" />
                    <span asp-validation-for="PhoneTechn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmailTechn"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmailTechn" class="form-control" />
                    <span asp-validation-for="EmailTechn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApprovTemp"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApprovTemp" class="form-control" />
                    <span asp-validation-for="ApprovTemp" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{ 
<partial name="_ValidationScriptsPartial" />
}
