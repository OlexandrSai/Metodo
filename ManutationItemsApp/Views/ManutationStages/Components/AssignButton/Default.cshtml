@model ManutationItemsApp.ViewComponents.AssignButtonViewComponentModel


@if (Model.UserRules.CanAssign)
{
    <button class="btn btn-primary assignBtn" data-toggle="modal" data-target="#assignModal" value="@Model.ItemId">Assegnare</button>
}
@if (Model.UserRules.CanAutoAssign)
{
    <a type="button" class="btn btn-primary" asp-action="AssignToMeTake" asp-route-manutationId="@Model.ItemId">Prendere</a>
}